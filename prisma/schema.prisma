generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Friend {
  id        String    @id @default(uuid())
  name      String
  email     String    @unique
  phone     String?   @unique
  addresses Address[]
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
}

model Address {
  id        String   @id @default(uuid())
  street    String
  city      String
  state     String
  country   String
  zip       String
  friendId  String
  friend    Friend   @relation(fields: [friendId], references: [id])
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
